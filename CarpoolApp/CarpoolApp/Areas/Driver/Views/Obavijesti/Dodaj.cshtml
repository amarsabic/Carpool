@model CarpoolApp.Areas.Driver.ViewModels.Obavijesti.ObavijestDodajVM
@{
    ViewData["Title"] = "Dodaj";
}
<link rel="stylesheet" href="~/css/driver.css" asp-append-version="true" />
<div class="row justify-content-center align-content-center">

    <form id="formaDodajVozilo" action="Dodaj" method="post">
        <h2>Kreiraj novu obavijest</h2>
        <div class="form-group">
            <label asp-for="Naslov" class="control-label"></label>
            <input asp-for="Naslov" class="form-control" />
            <span asp-validation-for="Naslov" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TipObavijesti" class="control-label"></label>
            <select asp-for="TipObavijesti" asp-items="Model.tipovi" class="form-control">
                <option>(odaberite tip)</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="KratkiOpis"class="control-label">Kratki opis</label>
            <input asp-for="KratkiOpis" class="form-control" />
            <span asp-validation-for="KratkiOpis" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DatumVrijemeObjave" class="control-label"></label>
            <input asp-for="DatumVrijemeObjave" class="form-control" />
            <span asp-validation-for="DatumVrijemeObjave" class="text-danger"></span>
        </div>
        <button  class="btn btn-primary" type="submit">Objavi</button>
    </form>
</div>