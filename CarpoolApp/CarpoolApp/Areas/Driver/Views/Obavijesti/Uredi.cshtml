@model CarpoolApp.Areas.Driver.ViewModels.Obavijesti.ObavijestiUrediVM
@{
    ViewData["Title"] = "Uredi";
}

<!-- Custom scripts for this template -->
<script src="~/bootstrapTheme/js/freelancer.min.js" asp-append-version="true"></script>

<!-- Contact Section -->
<section class="page-section portfolio" id="contact">
    <div class="container">

        <!-- Contact Section Heading -->
        <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Uredi obavijest</h2>

        <!-- Icon Divider -->
        <div class="divider-custom">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon">
                <i class="fas fa-edit"></i>
            </div>
            <div class="divider-custom-line"></div>
        </div>

        <!-- Contact Section Form -->
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <input asp-for="ObavijestId" hidden="hidden" />
                <form enctype="multipart/form-data" action="Dodaj" method="post">
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls mb-0 pb-2">
                            <label>Naslov</label>
                            <input asp-for="Naslov" class="form-control" id="name" type="text" required="required" placeholder="Naslov" data-validation-required-message="Molimo Vas unesite naslov sadržaja.">
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="control-group">
                        <label>Tip obavijesti</label>
                        <select asp-for="TipObavijesti" asp-items="Model.tipovi" class="form-control">
                            <option disabled="disabled">(odaberite tip)</option>
                        </select>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls mb-0 pb-2">
                            <label>Kratki opis</label>
                            <textarea asp-for="KratkiOpis" class="form-control" id="message" rows="5" placeholder=". . ." required="required" data-validation-required-message="Molimo Vas unesite sadržaj."></textarea>
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>

                    <br>
                    <div id="success"></div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-xl">Spremi</button>
                        <a asp-area="Driver" asp-controller="Obavijesti" asp-action="Obrisi" asp-route-obavijestiId="@Model.ObavijestId" class="btn btn-danger btn-xl">Obriši</a>
                    </div>
                </form>
            </div>
        </div>

    </div>
</section>