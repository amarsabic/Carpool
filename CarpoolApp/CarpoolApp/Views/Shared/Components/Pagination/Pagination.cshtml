@model CarpoolApp.ViewModels.PaginationVM
<!-- First -->
@if (Model.StartPageIndex > 1)
{
    <button ajax-form-call="yes" type="submit" name="Page" value="1" class="">First</button>
}

@if (Model.PreviousPage > 0)
{
    <!-- Previous -->
    <button ajax-form-call="yes" type="submit" name="Page" value="@Model.PreviousPage" class=""> <i class="fas fa-arrow-left"></i></button>
}

<!-- Numbers -->
@for (var i = Model.StartPageIndex; i <= Model.StopPageIndex; i++)
{
    <button ajax-form-call="yes" name="Page" value="@i" class="@(Model.PageIndex == i ? "active" : "")">@i</button>
}

@if (Model.NextPage <= Model.PageCount && Model.NextPage > 0)
{
    <!-- Next -->
    <button ajax-form-call="yes" type="submit" name="Page" value="@Model.NextPage" class=""><i class="fas fa-arrow-right"></i></button>
}

@if (Model.PageCount > Model.StopPageIndex)
{
    <!-- Last -->
    <button ajax-form-call="yes" type="submit" name="Page" value="@Model.PageCount" class="">Last</button>
}